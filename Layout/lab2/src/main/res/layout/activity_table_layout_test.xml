<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_table_layout_test"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="media.pipi.lab2.TableLayoutTest"
    android:background="#000">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tableRow1"
        android:layout_marginTop="10dp"
        android:weightSum="3.2"
        android:id="@+id/tableRow2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView27"
            android:layout_weight="0.2"
            android:textColor="#C0C0C0"/>

        <TextView
            android:text="Save..."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView28"
            android:layout_weight="3"
            android:textColor="#C0C0C0"/>

        <TextView
            android:text="Ctrl-S"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView29"
            android:layout_weight="1"
            android:textAlignment="textEnd"
            android:textColor="#C0C0C0"/>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tableRow2"
        android:layout_marginTop="10dp"
        android:id="@+id/tableRow3"
        android:weightSum="3.2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView30"
            android:layout_weight="0.2"
            android:textColor="#C0C0C0"/>

        <TextView
            android:text=" Save As..."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView31"
            android:layout_weight="3"
            android:textColor="#C0C0C0"/>

        <TextView
            android:text="Ctrl-Shift-S"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView32"
            android:layout_weight="1"
            android:textAlignment="textEnd"
            android:textColor="#C0C0C0"/>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tableRow3"
        android:layout_alignParentStart="true"
        android:id="@+id/tabelRow4"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#C0C0C0"
            android:layout_weight="3.2"></LinearLayout>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tableRow5"
        android:weightSum="3.2"
        android:layout_below="@+id/tabelRow4"
        android:layout_alignParentStart="true">

        <TextView
            android:text="X"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView33"
            android:layout_weight="0.2"
            android:textAlignment="center"
            android:textColor="#C0C0C0"/>

        <TextView
            android:text="Import..."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView34"
            android:layout_weight="3"
            android:textColor="#C0C0C0"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView38"
            android:layout_weight="1"
            android:textAlignment="textEnd"
            android:textColor="#C0C0C0"/>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tableRow5"
        android:id="@+id/tableRow6"
        android:layout_marginTop="10dp"
        android:weightSum="3.2">

        <TextView
            android:text="X"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView35"
            android:layout_weight="0.2"
            android:textAlignment="center"
            android:textColor="#C0C0C0"/>

        <TextView
            android:text="Export..."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView36"
            android:layout_weight="3"
            android:textColor="#C0C0C0"/>

        <TextView
            android:text="Ctrl-E"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView37"
            android:layout_weight="1"
            android:textAlignment="textEnd"
            android:textColor="#C0C0C0"/>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tableRow6"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:id="@+id/tableRow7">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#C0C0C0"
            android:layout_weight="3.2"></LinearLayout>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tableRow7"
        android:id="@+id/tableRow8"
        android:weightSum="3.2">

        <TextView
            android:text="X"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView39"
            android:layout_weight="0.2"
            android:textAlignment="center"
            android:textColor="#C0C0C0"/>

        <TextView
            android:text="Quit  "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView40"
            android:layout_weight="3"
            android:textColor="#C0C0C0"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView41"
            android:layout_weight="1"
            android:textAlignment="textEnd"
            android:textColor="#C0C0C0"/>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3.2"
        android:id="@+id/tableRow1"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView24"
            android:layout_weight="0.2"
            android:textColor="#C0C0C0"/>

        <TextView
            android:text="Open..."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView25"
            android:layout_weight="3"
            android:textColor="#C0C0C0"
            android:textSize="14sp" />

        <TextView
            android:text="Ctrl-O"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView26"
            android:layout_weight="1"
            android:textAlignment="textEnd"
            android:textColor="#C0C0C0"/>
    </TableRow>
</RelativeLayout>
